<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payment_document_mx_2" inherit_id="l10n_mx_edi.report_payment_document_mx">
        <xpath expr="//table" position="after">
            <t t-if="o.l10n_mx_edi_cfdi_uuid">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>UUID</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Total</th>
                            <th class="text-right">Code</th>
                            <th class="text-right">Description</th>
                            <th class="text-right">Units</th>
                            <th class="text-right">Price</th>                                                       
                            <th>Currency</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span t-esc="tfd.get('UUID', '')"/></td>
                            <td><span t-esc="xml.Conceptos.get('Cantidad', '')"/></td>
                            <td class="text-right"><span t-esc="xml.Conceptos.get('Importe', '')"/></td>
                            <td class="text-right"><span t-esc="xml.Conceptos.get('ClaveProdServ', '')"/></td>                            <td class="text-right"><span t-esc="inv.get('ImpPagado', '')"/></td>
                            <td class="text-right"><span t-esc="xml.Conceptos.get('Pago', '')"/></td>
                            <td class="text-right"><span t-esc="xml.Conceptos.get('ClaveUnidad', '')"/></td>  
                            <td class="text-right"><span t-esc="xml.Conceptos.get('ValorUnitariod', '')"/></td>  
                            <td class="text-right"><span t-esc="xml.Conceptos.get('ClaveUnidad', '')"/></td>  
                            <td><span t-esc="xml.get('Moneda')"/></td>
                         </tr>   
                    </tbody>
                </table>
            </t>            
            <t t-if="o.l10n_mx_edi_cfdi_uuid">
                            <span>Emitter certificate:</span> <span t-esc="xml.get('NoCertificado')"/>
                            <span> | Expedition place:</span> <span t-esc="xml.get('LugarExpedicion')"/>
                            <span> | Fiscal Regime:</span>
                                <t t-if="xml.get('version', '') == '3.2'"> <span t-esc="xml.Emisor.RegimenFiscal.get('Regimen')"/></t>
                                <t t-if="xml.get('Version', '') == '3.3'"> <span t-esc="xml.Emisor.get('RegimenFiscal', '')"/></t>
                            <span> | Emission Date:</span> <span t-esc="xml.get('Fecha', '').replace('T', ' ')"/>
                            <span> | Certification Date:</span> <span t-esc="tfd.get('FechaTimbrado', '').replace('T', ' ')"/>
                            <span> | Fiscal Folio:</span> <span t-esc="tfd.get('UUID')"/>
            </t>
        </xpath>
    </template>
</odoo>
