<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_g360" model="ir.ui.view">
            <field name="name">sale.order.g360</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='validity_date']" position="after">
                      <field name="fecha_probable"/>
                      <field name="plazo"/>
                      <field name="anticipo"/>
                      <field name="precio_total"/>
                      <field name="name" placeholder="Nombre"/>
                      <field name="puesto" placeholder="Puesto"/>
                      <field name="telefono" placeholder="Telefono"/>
                      <field name="correo" placeholder="Correo"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
